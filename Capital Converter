import React, { useState, useEffect, useMemo } from 'react';
import { 
  Plus, 
  TrendingUp, 
  Wallet, 
  Trash2, 
  History, 
  Zap,
  Coffee,
  Sun,
  Moon,
  ChevronDown,
  ChevronRight,
  Calendar,
  X,
  Medal,
  Flame,
  Target,
  Trophy
} from 'lucide-react';
import { 
  AreaChart, 
  Area, 
  Tooltip, 
  ResponsiveContainer,
  XAxis,
  YAxis,
  CartesianGrid,
  Legend
} from 'recharts';

// --- 组件部分 ---

export default function App() {
  // --- State Management ---
  const [entries, setEntries] = useState(() => {
    const saved = localStorage.getItem('capital-converter-entries');
    return saved ? JSON.parse(saved) : [];
  });

  // 主题状态：默认为深色
  const [isDarkMode, setIsDarkMode] = useState(() => {
    const savedTheme = localStorage.getItem('capital-converter-theme');
    return savedTheme ? savedTheme === 'dark' : true;
  });

  const [isModalOpen, setIsModalOpen] = useState(false);
  const [mealType, setMealType] = useState('lunch');
  const [item, setItem] = useState('');
  const [actualCost, setActualCost] = useState('');
  const [standardCost, setStandardCost] = useState('15');
  const [showFuture, setShowFuture] = useState(true);
  
  const [expandedDays, setExpandedDays] = useState({});

  const RATE = 0.10;
  const YEARS = 20;

  // --- Effects ---
  useEffect(() => {
    localStorage.setItem('capital-converter-entries', JSON.stringify(entries));
  }, [entries]);

  useEffect(() => {
    localStorage.setItem('capital-converter-theme', isDarkMode ? 'dark' : 'light');
  }, [isDarkMode]);

  useEffect(() => {
    if (entries.length > 0) {
      const latestDate = new Date(entries[0].timestamp).toLocaleDateString('zh-CN');
      if (!expandedDays[latestDate]) {
          setExpandedDays(prev => ({ ...prev, [latestDate]: true }));
      }
    }
  }, [entries.length]); 

  // --- Calculations ---
  const stats = useMemo(() => {
    const totalActual = entries.reduce((acc, curr) => acc + curr.actual, 0);
    const totalStandard = entries.reduce((acc, curr) => acc + curr.standard, 0);
    const saved = totalStandard - totalActual;
    const futureValue = saved * Math.pow((1 + RATE), YEARS);
    const uniqueDays = new Set(entries.map(e => new Date(e.timestamp).toLocaleDateString())).size;
    const dailyAverage = uniqueDays > 0 ? totalActual / uniqueDays : 0;

    return { totalActual, totalStandard, saved, futureValue, uniqueDays, dailyAverage };
  }, [entries]);

  const chartData = useMemo(() => {
    let accSaved = 0;
    let accActual = 0;
    const sortedForChart = [...entries].sort((a, b) => a.timestamp - b.timestamp);

    return sortedForChart.map((entry, index) => {
      accSaved += (entry.standard - entry.actual); 
      const accAsset = accSaved * Math.pow((1 + RATE), YEARS); 
      accActual += entry.actual; 

      return {
        name: index + 1,
        asset: Math.round(accAsset),
        spend: Math.round(accActual),
        rawSaved: Math.round(accSaved),
        date: new Date(entry.timestamp).toLocaleDateString('zh-CN', {month:'numeric', day:'numeric'})
      };
    });
  }, [entries]);

  const achievements = useMemo(() => {
    const uniqueDates = [...new Set(entries.map(e => new Date(e.timestamp).toDateString()))];
    let fastingStreak = false;
    if (uniqueDates.length >= 3) {
      const sortedEntries = [...entries].sort((a, b) => b.timestamp - a.timestamp);
      const sortedUniqueDays = [...new Set(sortedEntries.map(e => new Date(e.timestamp).toDateString()))];
      
      if (sortedUniqueDays.length >= 3) {
        const checkDays = sortedUniqueDays.slice(0, 3);
        const hasBreakfast = checkDays.some(dayStr => {
           return entries.some(e => new Date(e.timestamp).toDateString() === dayStr && e.meal === 'breakfast' && e.actual > 0);
        });
        fastingStreak = !hasBreakfast;
      }
    }
    const minimalist = stats.uniqueDays >= 3 && stats.dailyAverage < 20;
    const saver = stats.saved > 100;

    return { fastingStreak, minimalist, saver };
  }, [entries, stats]);

  const groupedEntries = useMemo(() => {
    const groups = {};
    const sortedEntries = [...entries].sort((a, b) => b.timestamp - a.timestamp);

    sortedEntries.forEach(entry => {
      const dateKey = new Date(entry.timestamp).toLocaleDateString('zh-CN');
      if (!groups[dateKey]) {
        groups[dateKey] = {
          date: dateKey,
          timestamp: entry.timestamp,
          items: [],
          dayTotalSaved: 0
        };
      }
      groups[dateKey].items.push(entry);
      groups[dateKey].dayTotalSaved += (entry.standard - entry.actual);
    });

    return Object.values(groups); 
  }, [entries]);

  // --- Handlers ---
  const handleAddEntry = (e) => {
    e && e.preventDefault();
    if (actualCost === '' || standardCost === '') return; 

    const newEntry = {
      id: Date.now(),
      timestamp: Date.now(),
      meal: mealType,
      item: item || '未命名',
      actual: parseFloat(actualCost) || 0,
      standard: parseFloat(standardCost) || 0,
    };

    setEntries([newEntry, ...entries]);
    resetForm();
    setIsModalOpen(false);
  };

  const useTemplate = (template) => {
      setMealType(template.meal);
      setItem(template.item);
      setActualCost(template.actual);
      setStandardCost(template.standard);
  };

  const resetForm = () => {
    setItem('');
    setActualCost('');
    setMealType('lunch');
    setStandardCost('15');
  };

  const handleDelete = (id) => {
    setEntries(entries.filter(e => e.id !== id));
  };

  const toggleDay = (dateKey) => {
    setExpandedDays(prev => ({
      ...prev,
      [dateKey]: !prev[dateKey]
    }));
  };

  const getMealIcon = (type) => {
    switch(type) {
      case 'breakfast': return <Coffee size={18} />;
      case 'lunch': return <Sun size={18} />;
      case 'dinner': return <Moon size={18} />;
      default: return <Coffee size={18} />;
    }
  };

  const formatMoney = (amount) => {
    return new Intl.NumberFormat('zh-CN', { style: 'currency', currency: 'CNY' }).format(amount);
  };

  // 根据主题定义图表颜色
  const chartTheme = isDarkMode ? {
    grid: '#334155',
    text: '#94a3b8',
    tooltipBg: '#0f172a',
    tooltipBorder: '#334155',
    tooltipText: '#f8fafc'
  } : {
    grid: '#e2e8f0',
    text: '#64748b',
    tooltipBg: '#ffffff',
    tooltipBorder: '#e2e8f0',
    tooltipText: '#0f172a'
  };

  // 最外层包裹一个 div 用来控制 dark class，使得内部的 dark: 前缀生效
  return (
    <div className={isDarkMode ? 'dark' : ''}>
      <div className="min-h-screen transition-colors duration-300 bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-200 font-sans selection:bg-emerald-500/30 pb-28">
        <div className="max-w-md mx-auto min-h-screen flex flex-col relative overflow-hidden">
          
          {/* 背景装饰光效 (仅在深色模式下明显，浅色模式下减淡) */}
          <div className="absolute top-[-10%] left-[-10%] w-[40%] h-[30%] bg-emerald-500/10 blur-[100px] rounded-full pointer-events-none opacity-50 dark:opacity-100" />
          <div className="absolute bottom-[-10%] right-[-10%] w-[40%] h-[30%] bg-blue-500/10 blur-[100px] rounded-full pointer-events-none opacity-50 dark:opacity-100" />

          {/* 顶部 Header */}
          <header className="p-6 flex justify-between items-center z-10">
            <div>
              <h1 className="text-xl font-bold tracking-tight text-slate-900 dark:text-white flex items-center gap-2">
                <Zap className="text-emerald-500 dark:text-emerald-400 fill-emerald-500 dark:fill-emerald-400" size={20} />
                Capital Converter
              </h1>
              <p className="text-xs text-slate-500 mt-1">Day {stats.uniqueDays} • 日均花费 ¥{stats.dailyAverage.toFixed(1)}</p>
            </div>
            <div className="flex gap-4 items-center">
                <button 
                  onClick={() => setIsDarkMode(!isDarkMode)}
                  className="p-2 rounded-full bg-slate-200/50 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-slate-300 dark:hover:bg-slate-700 transition-colors"
                >
                  {isDarkMode ? <Sun size={16} /> : <Moon size={16} />}
                </button>
                <button 
                  onClick={() => {
                      if(confirm('确定要清空所有数据重新开始实验吗？')) {
                          setEntries([]);
                      }
                  }}
                  className="text-xs text-slate-400 hover:text-red-500 transition-colors"
                >
                  重置
                </button>
            </div>
          </header>

          {/* 核心仪表盘 (Dashboard) */}
          <main className="flex-1 px-6 z-10 flex flex-col gap-6">
            
            {/* 大数字卡片 */}
            <div 
              onClick={() => setShowFuture(!showFuture)}
              className="relative group cursor-pointer"
            >
              {/* 卡片背后的光晕 */}
              <div className="absolute inset-0 bg-gradient-to-br from-emerald-500/10 to-blue-500/5 rounded-2xl blur-sm group-hover:blur-md transition-all duration-500" />
              
              <div className="relative bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl border border-slate-200 dark:border-white/10 p-6 rounded-2xl shadow-xl shadow-slate-200/50 dark:shadow-none overflow-hidden transition-colors duration-300">
                <div className="flex justify-between items-start mb-2">
                  <span className="text-sm font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">
                    {showFuture ? '20年后的资产价值 (10%)' : '当前累计节省本金'}
                  </span>
                  <div className="bg-slate-100 dark:bg-slate-800 p-1.5 rounded-lg text-emerald-500 dark:text-emerald-400">
                    {showFuture ? <TrendingUp size={16} /> : <Wallet size={16} />}
                  </div>
                </div>
                
                <div className="flex items-baseline gap-2">
                  <span className="text-4xl font-bold text-slate-900 dark:text-white tracking-tight transition-colors">
                    {formatMoney(showFuture ? stats.futureValue : stats.saved)}
                  </span>
                </div>
                
                <div className="mt-4 flex items-center gap-2 text-xs text-slate-500">
                  <div className="h-1.5 flex-1 bg-slate-200 dark:bg-slate-800 rounded-full overflow-hidden">
                    <div 
                      className="h-full bg-emerald-500 transition-all duration-1000" 
                      style={{ width: `${Math.min((stats.saved / (stats.totalStandard || 1)) * 100, 100)}%` }}
                    />
                  </div>
                  <span>节流率 {stats.totalStandard > 0 ? ((stats.saved / stats.totalStandard) * 100).toFixed(0) : 0}%</span>
                </div>
              </div>
            </div>

            {/* 成就勋章墙 */}
            <div className="flex gap-3 overflow-x-auto pb-2 scrollbar-hide">
               {/* 勋章 1 */}
               <div className={`flex items-center gap-2 px-3 py-2 rounded-lg border min-w-[130px] transition-colors ${achievements.minimalist ? 'bg-emerald-500/10 border-emerald-500/30' : 'bg-white/50 dark:bg-slate-900/50 border-slate-200 dark:border-slate-800 opacity-50'}`}>
                  <div className={`p-1.5 rounded-full ${achievements.minimalist ? 'bg-emerald-500 text-white dark:text-slate-900' : 'bg-slate-200 dark:bg-slate-800 text-slate-500 dark:text-slate-600'}`}>
                      <Target size={14} />
                  </div>
                  <div>
                      <div className={`text-xs font-bold ${achievements.minimalist ? 'text-emerald-600 dark:text-emerald-400' : 'text-slate-500'}`}>极简大师</div>
                      <div className="text-[10px] text-slate-500">日均&lt;20元</div>
                  </div>
               </div>
               
               {/* 勋章 2 */}
               <div className={`flex items-center gap-2 px-3 py-2 rounded-lg border min-w-[130px] transition-colors ${achievements.fastingStreak ? 'bg-blue-500/10 border-blue-500/30' : 'bg-white/50 dark:bg-slate-900/50 border-slate-200 dark:border-slate-800 opacity-50'}`}>
                  <div className={`p-1.5 rounded-full ${achievements.fastingStreak ? 'bg-blue-500 text-white' : 'bg-slate-200 dark:bg-slate-800 text-slate-500 dark:text-slate-600'}`}>
                      <Flame size={14} />
                  </div>
                  <div>
                      <div className={`text-xs font-bold ${achievements.fastingStreak ? 'text-blue-600 dark:text-blue-400' : 'text-slate-500'}`}>空腹修行</div>
                      <div className="text-[10px] text-slate-500">3天无早饭</div>
                  </div>
               </div>

               {/* 勋章 3 */}
               <div className={`flex items-center gap-2 px-3 py-2 rounded-lg border min-w-[130px] transition-colors ${achievements.saver ? 'bg-yellow-500/10 border-yellow-500/30' : 'bg-white/50 dark:bg-slate-900/50 border-slate-200 dark:border-slate-800 opacity-50'}`}>
                  <div className={`p-1.5 rounded-full ${achievements.saver ? 'bg-yellow-500 text-white dark:text-slate-900' : 'bg-slate-200 dark:bg-slate-800 text-slate-500 dark:text-slate-600'}`}>
                      <Trophy size={14} />
                  </div>
                  <div>
                      <div className={`text-xs font-bold ${achievements.saver ? 'text-yellow-600 dark:text-yellow-400' : 'text-slate-500'}`}>资产新星</div>
                      <div className="text-[10px] text-slate-500">存下100元</div>
                  </div>
               </div>
            </div>

            {/* 趋势图表 (Chart) - 双曲线对比 */}
            {entries.length > 1 && (
              <div className="bg-white/50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 rounded-xl p-4 transition-colors">
                <div className="flex justify-between items-center mb-4">
                   <h3 className="text-xs font-semibold text-slate-500 uppercase">资产 vs 消费</h3>
                   <div className="flex gap-3 text-[10px] text-slate-600 dark:text-slate-400">
                      <div className="flex items-center gap-1"><div className="w-2 h-2 rounded-full bg-emerald-500"></div>资产积累</div>
                      <div className="flex items-center gap-1"><div className="w-2 h-2 rounded-full bg-slate-500 dark:bg-slate-600"></div>实际支出</div>
                   </div>
                </div>
                <div className="h-40 w-full">
                  <ResponsiveContainer width="100%" height="100%">
                    <AreaChart data={chartData}>
                      <defs>
                        <linearGradient id="colorAsset" x1="0" y1="0" x2="0" y2="1">
                          <stop offset="5%" stopColor="#10b981" stopOpacity={0.3}/>
                          <stop offset="95%" stopColor="#10b981" stopOpacity={0}/>
                        </linearGradient>
                        <linearGradient id="colorSpend" x1="0" y1="0" x2="0" y2="1">
                          <stop offset="5%" stopColor="#64748b" stopOpacity={0.3}/>
                          <stop offset="95%" stopColor="#64748b" stopOpacity={0}/>
                        </linearGradient>
                      </defs>
                      <Tooltip 
                        contentStyle={{ 
                          backgroundColor: chartTheme.tooltipBg, 
                          borderColor: chartTheme.tooltipBorder, 
                          color: chartTheme.tooltipText,
                          fontSize: '12px',
                          borderRadius: '8px'
                        }}
                        itemStyle={{ padding: 0 }}
                        formatter={(value, name) => [
                            `¥${value}`, 
                            name === 'asset' ? '复利资产' : '累计支出'
                        ]}
                      />
                      <Area 
                        type="monotone" 
                        dataKey="spend" 
                        stroke="#64748b" 
                        strokeWidth={2}
                        fillOpacity={1} 
                        fill="url(#colorSpend)" 
                      />
                      <Area 
                        type="monotone" 
                        dataKey="asset" 
                        stroke="#10b981" 
                        strokeWidth={2}
                        fillOpacity={1} 
                        fill="url(#colorAsset)" 
                      />
                    </AreaChart>
                  </ResponsiveContainer>
                </div>
              </div>
            )}

            {/* 按天分组的历史记录 */}
            <div className="flex flex-col gap-3">
              <h3 className="text-xs font-semibold text-slate-500 uppercase tracking-wider pl-1 flex items-center gap-2">
                <History size={12} />
                近期记录
              </h3>
              
              {groupedEntries.length === 0 ? (
                  <div className="text-center py-10 text-slate-500 text-sm italic">
                    点击右下角按钮，<br/>开始你的第一笔“资本积累”。
                  </div>
              ) : (
                  groupedEntries.map((group) => {
                      const isExpanded = expandedDays[group.date];
                      return (
                          <div key={group.date} className="flex flex-col bg-white/50 dark:bg-slate-900/50 rounded-xl overflow-hidden border border-slate-200 dark:border-slate-800/50 transition-colors">
                              {/* 天标题栏 */}
                              <div 
                                  onClick={() => toggleDay(group.date)}
                                  className="flex items-center justify-between p-3 cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                              >
                                  <div className="flex items-center gap-2">
                                      <div className="text-slate-400 dark:text-slate-500">
                                          {isExpanded ? <ChevronDown size={16} /> : <ChevronRight size={16} />}
                                      </div>
                                      <div className="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-300">
                                          <Calendar size={14} className="text-slate-400 dark:text-slate-500" />
                                          {group.date}
                                          {group.date === new Date().toLocaleDateString('zh-CN') && (
                                              <span className="text-xs bg-emerald-500/10 dark:bg-emerald-500/20 text-emerald-600 dark:text-emerald-400 px-1.5 py-0.5 rounded">今天</span>
                                          )}
                                      </div>
                                  </div>
                                  <div className="text-sm font-bold text-emerald-600 dark:text-emerald-400">
                                      +{formatMoney(group.dayTotalSaved)}
                                  </div>
                              </div>

                              {/* 折叠的内容 */}
                              {isExpanded && (
                                  <div className="flex flex-col border-t border-slate-200 dark:border-slate-800/50">
                                      {group.items.map((entry) => (
                                          <div key={entry.id} className="group flex items-center justify-between p-3 hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors border-b border-slate-100 dark:border-slate-800/30 last:border-0">
                                              <div className="flex items-center gap-3">
                                                  <div className={`p-1.5 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400`}>
                                                      {getMealIcon(entry.meal)}
                                                  </div>
                                                  <div>
                                                      <div className="text-sm text-slate-700 dark:text-slate-300">{entry.item}</div>
                                                      <div className="text-xs text-slate-400 dark:text-slate-600">
                                                          原价 ¥{entry.standard}
                                                      </div>
                                                  </div>
                                              </div>
                                              
                                              <div className="flex items-center gap-3">
                                                  <div className="text-right">
                                                      <div className="text-sm font-medium text-emerald-600 dark:text-emerald-500/90">
                                                          +{(entry.standard - entry.actual).toFixed(1)}
                                                      </div>
                                                      <div className="text-[10px] text-slate-400 dark:text-slate-600 line-through">
                                                          ¥{entry.actual}
                                                      </div>
                                                  </div>
                                                  <button 
                                                      onClick={(e) => {
                                                          e.stopPropagation();
                                                          handleDelete(entry.id);
                                                      }}
                                                      className="p-1.5 text-slate-400 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-all"
                                                  >
                                                      <Trash2 size={14} />
                                                  </button>
                                              </div>
                                          </div>
                                      ))}
                                  </div>
                              )}
                          </div>
                      );
                  })
              )}
            </div>
          </main>

          {/* 悬浮添加按钮 (FAB) */}
          <button
            onClick={() => {
                resetForm();
                setIsModalOpen(true);
            }}
            className="fixed bottom-6 right-6 z-40 bg-emerald-500 hover:bg-emerald-400 text-white dark:text-slate-900 rounded-full p-4 shadow-lg shadow-emerald-500/30 transition-all active:scale-90"
          >
            <Plus size={28} strokeWidth={2.5} />
          </button>

          {/* 模态框 / 弹窗 (Modal) */}
          {isModalOpen && (
            <div className="fixed inset-0 z-50 flex items-end sm:items-center justify-center p-4">
              {/* 遮罩背景 */}
              <div 
                className="absolute inset-0 bg-slate-900/40 dark:bg-slate-950/80 backdrop-blur-sm transition-opacity"
                onClick={() => setIsModalOpen(false)}
              />
              
              {/* 弹窗内容 */}
              <div className="relative w-full max-w-sm bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-2xl p-6 shadow-2xl animate-in slide-in-from-bottom-10 fade-in duration-200 transition-colors">
                <button 
                  onClick={() => setIsModalOpen(false)}
                  className="absolute top-4 right-4 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300"
                >
                  <X size={20} />
                </button>

                <h2 className="text-lg font-bold text-slate-900 dark:text-white mb-4 flex items-center gap-2">
                  <Plus className="text-emerald-500 dark:text-emerald-400" size={20} />
                  记录这顿饭
                </h2>

                {/* 快速模板区 */}
                <div className="mb-6">
                   <div className="text-xs text-slate-500 uppercase font-semibold mb-2 flex items-center gap-1">
                      <Zap size={10} className="text-yellow-500" />
                      快速模板
                   </div>
                   <div className="flex gap-2 overflow-x-auto pb-1 scrollbar-hide">
                      <button 
                          onClick={() => useTemplate({ meal: 'breakfast', item: '空腹晨修', actual: 0, standard: 8 })}
                          className="flex-shrink-0 px-3 py-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-700 rounded-lg text-xs text-slate-600 dark:text-slate-300 transition-colors text-left"
                      >
                          <div className="font-bold text-blue-500 dark:text-blue-400">空腹晨修</div>
                          <div className="text-[10px] text-slate-500">¥0 (省¥8)</div>
                      </button>
                      <button 
                          onClick={() => useTemplate({ meal: 'lunch', item: '水果午餐', actual: 5, standard: 15 })}
                          className="flex-shrink-0 px-3 py-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-700 rounded-lg text-xs text-slate-600 dark:text-slate-300 transition-colors text-left"
                      >
                          <div className="font-bold text-emerald-500 dark:text-emerald-400">水果午餐</div>
                          <div className="text-[10px] text-slate-500">¥5 (省¥10)</div>
                      </button>
                      <button 
                          onClick={() => useTemplate({ meal: 'dinner', item: '丰盛晚餐', actual: 16, standard: 15 })}
                          className="flex-shrink-0 px-3 py-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-700 rounded-lg text-xs text-slate-600 dark:text-slate-300 transition-colors text-left"
                      >
                          <div className="font-bold text-yellow-500 dark:text-yellow-400">丰盛晚餐</div>
                          <div className="text-[10px] text-slate-500">¥16 (省-¥1)</div>
                      </button>
                   </div>
                </div>

                <form onSubmit={handleAddEntry} className="flex flex-col gap-5">
                  {/* 1. 餐点类型选择 */}
                  <div>
                    <label className="text-xs text-slate-500 uppercase font-semibold mb-2 block">餐点</label>
                    <div className="flex gap-2">
                      {['breakfast', 'lunch', 'dinner'].map((type) => (
                        <button 
                          key={type}
                          type="button" 
                          onClick={() => setMealType(type)}
                          className={`flex-1 py-3 rounded-xl flex flex-col gap-1 justify-center items-center transition-all border ${
                            mealType === type 
                              ? 'bg-emerald-500/10 dark:bg-emerald-500/20 text-emerald-600 dark:text-emerald-400 border-emerald-500/50' 
                              : 'bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-500 border-transparent hover:bg-slate-200 dark:hover:bg-slate-700'
                          }`}
                        >
                          {getMealIcon(type)}
                          <span className="text-[10px] uppercase font-bold">
                            {type === 'breakfast' ? '早餐' : type === 'lunch' ? '午餐' : '晚餐'}
                          </span>
                        </button>
                      ))}
                    </div>
                  </div>

                  {/* 2. 食物内容 */}
                  <div>
                     <label className="text-xs text-slate-500 uppercase font-semibold mb-2 block">内容</label>
                     <input 
                      type="text" 
                      placeholder="例如: 苹果, 水煮蛋..." 
                      value={item}
                      autoFocus
                      onChange={(e) => setItem(e.target.value)}
                      className="w-full bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-3 text-base text-slate-900 dark:text-white focus:outline-none focus:border-emerald-500 transition-colors placeholder:text-slate-400 dark:placeholder:text-slate-600"
                    />
                  </div>

                  {/* 3. 费用对比 */}
                  <div className="flex gap-4">
                    <div className="flex-1">
                      <label className="text-xs text-slate-500 uppercase font-semibold mb-2 block">实际花费</label>
                      <div className="relative">
                        <span className="absolute left-3 top-3 text-slate-500 text-sm">¥</span>
                        <input 
                          type="number" 
                          placeholder="0" 
                          value={actualCost}
                          onChange={(e) => setActualCost(e.target.value)}
                          className="w-full bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl pl-7 pr-3 py-3 text-lg font-bold text-slate-900 dark:text-white focus:outline-none focus:border-emerald-500 transition-colors placeholder:text-slate-400 dark:placeholder:text-slate-600"
                        />
                      </div>
                    </div>
                    <div className="flex-1">
                      <label className="text-xs text-slate-500 uppercase font-semibold mb-2 block">标准参照</label>
                      <div className="relative">
                        <span className="absolute left-3 top-3 text-slate-500 text-sm">¥</span>
                        <input 
                          type="number" 
                          value={standardCost}
                          onChange={(e) => setStandardCost(e.target.value)}
                          className="w-full bg-slate-100/50 dark:bg-slate-800/50 border border-slate-200/50 dark:border-slate-700/50 rounded-xl pl-7 pr-3 py-3 text-lg font-bold text-slate-400 dark:text-slate-400 focus:outline-none focus:border-emerald-500/50 transition-colors"
                        />
                      </div>
                    </div>
                  </div>

                  {/* 4. 预览和提交 */}
                  {actualCost !== '' && standardCost !== '' && (
                    <div className="bg-emerald-500/10 rounded-lg p-3 text-center border border-emerald-500/20">
                       <div className="text-xs text-emerald-600/80 dark:text-emerald-300/80 mb-1">本次节流</div>
                       <div className="text-xl font-bold text-emerald-600 dark:text-emerald-400">
                          +¥{(parseFloat(standardCost) - parseFloat(actualCost)).toFixed(1)}
                       </div>
                    </div>
                  )}

                  <button 
                    type="submit"
                    className="w-full bg-emerald-500 hover:bg-emerald-400 text-white dark:text-slate-900 font-bold py-3.5 rounded-xl transition-transform active:scale-[0.98] shadow-lg shadow-emerald-500/20"
                  >
                    存入资本
                  </button>
                </form>
              </div>
            </div>
          )}

        </div>
      </div>
    </div>
  );
}
